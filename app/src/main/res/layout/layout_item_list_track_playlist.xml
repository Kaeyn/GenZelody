<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="8dp"
    >


    <ImageView
        android:id="@+id/imgTrackOfPlaylist"
        android:layout_width="70dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/avt" />

    <LinearLayout
        android:layout_width="220dp"
        android:layout_height="match_parent"
        android:padding="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvNameTrackOfPlaylist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="23dp"
            android:textColor="@color/white"
            android:text="Angro Ra Hill" />

        <TextView
            android:id="@+id/tvOwnerTrackOfPlaylist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#CFCFCF"
            android:textSize="18dp"
            android:text="Donal" />

    </LinearLayout>
    <ImageButton
        android:id="@+id/btnRemoveToPlaylist"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#00FFFFFF"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/baseline_do_disturb_24">

    </ImageButton>
</LinearLayout>